<Application
    x:Class="PCCleaner.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="using:PCCleaner.Resources"
    xmlns:local="using:PCCleaner" 
    xmlns:theme="using:PCCleaner.Themes">


    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <ResourceDictionary>
                    <theme:ThemeManager x:Key="ThemeManager" />
                </ResourceDictionary>
                
                <ResourceDictionary Source="ms-appx:///Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/BrushStyle.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/CheckBoxControlTemplate.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/ListBoxStyle.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/NavigationViewStyle.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/TextBlock.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/Converters.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>

            <resources:LocalizedStrings x:Key="LocalizedStrings" />

        </ResourceDictionary>
    </Application.Resources>

</Application>
