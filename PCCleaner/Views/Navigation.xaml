            <NavigationView.MenuItems>
                <!--Content="{Binding CommonResources.CacheText, Source={StaticResource LocalizedStrings}}"-->

                <NavigationViewItem 
                    Icon="Delete" 
                    Tag="cache"
                    Content="{Binding CommonResources.CacheText, Source={StaticResource LocalizedStrings}}">
