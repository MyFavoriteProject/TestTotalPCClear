<Page
    x:Class="TestTotalPCClear.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestTotalPCClear"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <RelativePanel>
            <Button RelativePanel.AlignLeftWithPanel="True"
                    FontFamily="Segoe MDL2 Assets" FontSize="36"
                    Content="&#xE700;"
                    Command="{Binding HamburgerButton}"/>
            <TextBlock x:ConnectionId='3' Name="TitleTextBlock"
                       FontSize="28" FontWeight="Bold" Margin="30 5 0 0" />
        </RelativePanel>
        <SplitView x:ConnectionId='2' 
            Grid.Row="1" 
            OpenPaneLength="200"
            Name="mySplitView"
            Resources="{Binding MySplitView, UpdateSourceTrigger=PropertyChanged}">
            <SplitView.Pane>
                <StackPanel>
                    <ListBoxItem>
                        <Button FontSize="24" 
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE74D;" 
                            Command="{Binding ScanFilesButtom}">
                        </Button>

                    </ListBoxItem>
                    <ListBoxItem>
                        <Button 
                            FontSize="24" 
                            Content="{Binding DeleteCacheText, UpdateSourceTrigger=PropertyChanged}" 
                            Command="{Binding DeleteCacheButtom}"
                            IsEnabled="{Binding IsButtonEnabled, UpdateSourceTrigger=PropertyChanged}"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <ComboBox 
                            FontSize="24" 
                            ItemsSource="{Binding LanguagesList, UpdateSourceTrigger=PropertyChanged}"
                            SelectedItem="{Binding SelectedLanguage, UpdateSourceTrigger=PropertyChanged}"
                            />
                    </ListBoxItem>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame  />
            </SplitView.Content>
        </SplitView>


        <ListBox
            Grid.Column="1"
            ItemsSource="{Binding FoundFiles, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
    
</Page>

