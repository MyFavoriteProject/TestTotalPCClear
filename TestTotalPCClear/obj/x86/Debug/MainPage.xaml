<Page
    x:Class="TestTotalPCClear.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestTotalPCClear"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
>

    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <AcrylicBrush x:Key="MenuAcrylicBrush"
                        BackgroundSource="HostBackdrop"
                        TintOpacity="0.6"
                        TintColor="#0078d633"/>
                    <AcrylicBrush x:Key="ContextAcrylicBrush"
                        BackgroundSource="HostBackdrop"
                        TintOpacity="0.6"
                        TintColor="#000000"/>
                    <AcrylicBrush x:Key="CheckBlockLightAcrylicBrush"
                                  BackgroundSource="HostBackdrop"
                                  TintOpacity="0.15"
                                  TintColor="#ffffff"/>
                    <Style x:Key="BaseTextBlock" TargetType="TextBlock">
                        <Setter Property="FontSize" Value="15px"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
                        <Setter Property="FontSize" Value="15px"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Height" Value="19px"/>
                        <Setter Property="Width" Value="100px"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                    <Style x:ConnectionId='2' x:Name="SplitViewButton" TargetType="Button">
                        <Setter Property="Height" Value="50px"/>
                        <Setter Property="Width" Value="50px"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ResourceDictionary>

            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
  
    </Page.Resources>

    <Grid >

        <NavigationView 
            Grid.Row="1" 
            IsPaneOpen="False" 
            RelativePanel.AlignLeftWithPanel="True"
            >
            <NavigationView.MenuItems>
                <NavigationViewItem 
                    Icon="Delete" 
                    Content="{Binding CacheText, UpdateSourceTrigger=PropertyChanged}"
                    >
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:EventTriggerBehavior.Actions>
                                <core:InvokeCommandAction Command="{Binding CacheButton}"/>
                            </core:EventTriggerBehavior.Actions>
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </NavigationViewItem>
                
                <NavigationViewItem Icon="Page2" Content="{Binding LargeFilesText, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:EventTriggerBehavior.Actions>
                                <core:InvokeCommandAction Command="{Binding LargeFilesButton}"/>
                            </core:EventTriggerBehavior.Actions>
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </NavigationViewItem>

                <NavigationViewItem Content="{Binding DuplicateText, UpdateSourceTrigger=PropertyChanged}">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE81E;"/>
                    </NavigationViewItem.Icon>
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:EventTriggerBehavior.Actions>
                                <core:InvokeCommandAction Command="{Binding DuplicateButton}"/>
                            </core:EventTriggerBehavior.Actions>
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </NavigationViewItem>

                <NavigationViewItem Icon="CalendarWeek" Content="{Binding AutoClearingText, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:EventTriggerBehavior.Actions>
                                <core:InvokeCommandAction Command="{Binding AutoClearingButton}"/>
                            </core:EventTriggerBehavior.Actions>
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </NavigationViewItem>

            </NavigationView.MenuItems>
            <Frame>
                <Grid Background="{StaticResource ContextAcrylicBrush}">
                    <local:MultiViewControl x:ConnectionId='3' x:Name="mltView" >
                        <local:MultiViewControl.Views>
                            <StackPanel>
                                <Image Source="/Image/Just.jpg" />
                            </StackPanel>

                            <StackPanel>
                                <Grid 
                                    VerticalAlignment="Top">
                                    <TextBlock
                                        Text="{Binding CacheText, UpdateSourceTrigger=PropertyChanged}"
                                        FontSize="18"
                                        Height="24px"
                                        Width="61px"
                                        HorizontalAlignment="Left"
                                        Margin="10"
                                        />
                                    <StackPanel 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                        <StackPanel Orientation="Vertical">
                                            <Button
                                            FontFamily="Segoe MDL2 Assets" 
                                            Content="&#xE712;"
                                            Style="{StaticResource SplitViewButton}"
                                            Background="Transparent" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <Grid 
                                    VerticalAlignment="Center">
                                    <StackPanel
                                        Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal"
                                            BorderBrush="Red"
                                            Background="{StaticResource CheckBlockLightAcrylicBrush}">
                                            <TextBlock 
                                                
                                                Style="{StaticResource BaseTextBlock}">
                                            <Run
                                                FontFamily="Segoe MDL2 Assets" 
                                                Text="&#xE770;"
                                                />
                                            <Run Text="System cache"/>
                                            <Run Text="MB"/>
                                            </TextBlock>
                                            <CheckBox Width="20" Height="20" />
                                            <TextBox Text="Its good"/>
                                        </StackPanel>

                                        <Grid
                                            Background="{StaticResource ContextAcrylicBrush}">
                                            <TextBlock
                                                 HorizontalAlignment="Left"
                                                Style="{StaticResource BaseTextBlock}">
                                                <Run
                                                    FontFamily="Segoe MDL2 Assets" 
                                                    Text="&#xE74C;"/>
                                                <Run Text="Application cache"/>
                                                <Run Text="MB"/>
                                            </TextBlock>
                                            <CheckBox BorderBrush="White" HorizontalAlignment="Right" />
                                        </Grid>

                                        <Grid
                                            Background="{StaticResource CheckBlockLightAcrylicBrush}">
                                            <TextBlock
                                                Style="{StaticResource BaseTextBlock}">
                                                <Run
                                                    FontFamily="Segoe MDL2 Assets" 
                                                    Text="&#xE715;"/>
                                                <Run Text="Mail cache"/>
                                                <Run Text="MB"/>
                                            </TextBlock>
                                            <CheckBox BorderBrush="White" HorizontalAlignment="Right" />
                                        </Grid>

                                        <Grid
                                            Background="{StaticResource ContextAcrylicBrush}">
                                            <TextBlock
                                                Style="{StaticResource BaseTextBlock}">
                                                <Run
                                                    FontFamily="Segoe MDL2 Assets" 
                                                    Text="&#xF56E;"/>
                                                <Run Text="Office cache"/>
                                                <Run Text="MB"/>
                                            </TextBlock>
                                            <CheckBox BorderBrush="White" HorizontalAlignment="Right" />
                                        </Grid>

                                        <Grid
                                            Background="{StaticResource CheckBlockLightAcrylicBrush}">
                                            <TextBlock
                                                Style="{StaticResource BaseTextBlock}">
                                                <Run
                                                    FontFamily="Segoe MDL2 Assets" 
                                                    Text="&#xE774;"/>
                                                <Run Text="Browser cache"/>
                                                <Run Text="MB"/>
                                            </TextBlock>
                                            <CheckBox BorderBrush="White" HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <StackPanel>
                                <Grid 
                                    VerticalAlignment="Top">
                                    <TextBlock
                                        Text="{Binding CacheText, UpdateSourceTrigger=PropertyChanged}"
                                        FontSize="18"
                                        Height="24px"
                                        Width="61px"
                                        HorizontalAlignment="Left"
                                        />
                                    <StackPanel 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                        <StackPanel Orientation="Vertical">
                                            <Button
                                            FontFamily="Segoe MDL2 Assets" 
                                            Content="&#xE8B3;"
                                            Style="{StaticResource SplitViewButton}"
                                            Background="Transparent" />
                                            <TextBlock Text="{Binding SelectAllText, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <Button
                                            FontFamily="Segoe MDL2 Assets" 
                                            Content="&#xE8E6;"
                                            Style="{StaticResource SplitViewButton}"
                                            Background="Transparent" />
                                            <TextBlock Text="{Binding DeselectAllText, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <Button
                                            FontFamily="Segoe MDL2 Assets" 
                                            Content="&#xE712;"
                                            Style="{StaticResource SplitViewButton}"
                                            Background="Transparent" />

                                        </StackPanel>
                                        
                                    </StackPanel>

                                </Grid>
                                
                                <Grid>
                                    
                                </Grid>
                            </StackPanel>

                            <StackPanel>
                            </StackPanel>
                            
                            <StackPanel>
                            </StackPanel>
                            
                        </local:MultiViewControl.Views>
                    </local:MultiViewControl>

                </Grid>

            </Frame>
        </NavigationView>

        
    </Grid>

</Page>

