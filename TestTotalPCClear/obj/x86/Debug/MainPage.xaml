<Page
    x:Class="TestTotalPCClear.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestTotalPCClear"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core" 
    xmlns:muxc="using:Windows.UI.Xaml.Controls"
    xmlns:binding="using:TestTotalPCClear.Themes.BindingHelpers">

    <Page.Resources>

        <ControlTemplate x:Key="CheckBoxTemplate" TargetType="CheckBox">
            
            <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            Height="40px">

                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CheckStates">
                        <VisualState x:Name="Checked">
                            <VisualState.Setters>
                                <Setter Target="CheckGlyph.Opacity" Value="1"/>
                            </VisualState.Setters>
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GridCheckBox"
                                           Storyboard.TargetProperty="Background">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource IsCheckBlockAcrylicBrush}" />
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Unchecked"/>

                        <VisualState x:Name="Indeterminate">
                            <VisualState.Setters>
                                <Setter Target="IndeterminateGlyph.Opacity" Value="1"/>
                            </VisualState.Setters>
                        </VisualState>
                        <!-- This Storyboard is equivalent to the Setter. -->
                        <!--<Storyboard>
                        <DoubleAnimation Duration="0" To="1"
                         Storyboard.TargetName="IndeterminateGlyph" Storyboard.TargetProperty="Opacity"/>
                    </Storyboard>-->
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                <Grid x:Name="GridCheckBox">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter 
                        x:Name="ContentPresenter"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        Content="{TemplateBinding Content}"   
                        Margin="{TemplateBinding Padding}" 
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                    <Rectangle 
                        Grid.Column="1" 
                        x:Name="NormalRectangle" 
                        Fill="Transparent" Height="17" Width="16"
                        Margin="11,11,13,12"
                        Stroke="{ThemeResource SystemControlForegroundBaseMediumHighBrush}"
                        StrokeThickness="{ThemeResource CheckBoxBorderThemeThickness}"
                        UseLayoutRounding="False"/>
                    <!--<Path 
                        Grid.Column="1" 
                        x:Name="CheckGlyph"
                        Data="M103,240 L111,240 119,248 127,240 135,240 123,252 135,264 127,264 119,257 111,264 103,264 114,252 z"
                        Fill="{ThemeResource CheckBoxForegroundThemeBrush}"
                        FlowDirection="LeftToRight"
                        Height="10" Width="12" Opacity="0" Stretch="Fill"/>-->
                    <Path 
                        Grid.Column="1" x:Name="CheckGlyph" Data="M0,4 5,9 9,0 4,5" 
                        Fill="{ThemeResource CheckBoxForegroundThemeBrush}" 
                        FlowDirection="LeftToRight" 
                        Height="14" Width="16" Opacity="0" Stretch="Fill"/>
                    
                    <Ellipse
                        Grid.Column="1"
                        x:Name="IndeterminateGlyph"
                        Fill="{ThemeResource CheckBoxForegroundThemeBrush}"
                        Height="8" Width="8" Opacity="0" UseLayoutRounding="False" />
                </Grid>
            </Border>
            
            

        </ControlTemplate>

        <!--<AcrylicBrush x:Key="NavigationViewDefaultPaneBackground" 
                      BackgroundSource="Backdrop"
                      TintColor="#0078d633"
                      TintOpacity="0.6"/>
        <AcrylicBrush x:Key="NavigationViewExpandedPaneBackground" 
                      BackgroundSource="Backdrop"
                      TintColor="#0078d633"
                      TintOpacity="0.6"/>-->

        <AcrylicBrush x:Key="IsCheckBlockAcrylicBrush"
                                  BackgroundSource="HostBackdrop"
                                  TintOpacity="0.45"
                                  TintColor="#0078d6"/>

        <Style x:Key="ButtonRoundedCorners" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,71"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="201px"/>
            <Setter Property="Height" Value="49px"/>
            <Setter Property="Background" Value="#0078d7"/>
            <Setter Property="CornerRadius" Value="24"/>
        </Style>

        <Style x:ConnectionId='2' x:Name="NavigationViewItemStyle" TargetType="NavigationViewItem">
            <Setter Property="FontSize" Value="15px"/>
            <Setter Property="Foreground" Value="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>
        </Style>

        <Style x:ConnectionId='3' x:Name="BaseTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15px"/>
            <Setter Property="Foreground" Value="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>
            <Setter Property="binding:ForegroundBindingHelper.Foreground" Value="ForegroundBrush"/>
        </Style>

        <Style x:ConnectionId='4' x:Name="StandartTextBlock" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
            <Setter Property="FontSize" Value="15px"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Height" Value="19px"/>
            <Setter Property="Width" Value="100px"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:ConnectionId='5' x:Name="TextBlockInCheckBox" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">

            <Setter Property="Height" Value="40px"/>
        </Style>

        <Style x:ConnectionId='6' x:Name="TextBlockInCheckBoxForSegoeMDL2" TargetType="TextBlock" BasedOn="{StaticResource TextBlockInCheckBox}">
            <Setter Property="FontSize" Value="22px"/>
            <Setter Property="Padding" Value="4,2,0,3"/>
        </Style>
        <Style x:ConnectionId='7' x:Name="TextBlockInCheckBoxForText" TargetType="TextBlock" BasedOn="{StaticResource TextBlockInCheckBox}">
            <Setter Property="Padding" Value="25,3,0,3"/>
        </Style>
        <Style x:ConnectionId='8' x:Name="TextBlockInCheckBoxForCount" TargetType="TextBlock" BasedOn="{StaticResource TextBlockInCheckBox}">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="0,3,0,3"/>
        </Style>
        <Style x:ConnectionId='9' x:Name="ContextHeaderTextBlock" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Margin" Value="43,34,0,56"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
        </Style>
        <Style x:ConnectionId='10' x:Name="HeaderButtonBase" TargetType="Button">
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="binding:ForegroundBindingHelper.Foreground" Value="ForegroundBrush"/>
            <Setter Property="binding:BackgroundBindingHelper.Background" Value="ContextAcrylicBrush" />
        </Style>

        <Style x:ConnectionId='11' x:Name="RadioButtonBase" TargetType="RadioButton">
            <Setter Property="binding:ForegroundBindingHelper.Foreground" Value="ForegroundBrush"/>
        </Style>

        <Style x:ConnectionId='12' x:Name="RoundButton" TargetType="Button">
            <Setter Property="Height" Value="112px"/>
            <Setter Property="Width" Value="112px"/>
            <Setter Property="Background" Value="#0078d7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="56"/>
            <Setter Property="FontSize" Value="57"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Content" Value="&#xE948;"/>
            <Setter Property="Padding" Value="25"/>
        </Style>
    </Page.Resources>

    <Grid >

        <NavigationView 
            Grid.Row="1" 
            IsPaneOpen="False" 
            RelativePanel.AlignLeftWithPanel="True">

            <NavigationView.MenuItems>
                
                <NavigationViewItem 
                    Icon="Delete" 
                    Content="{Binding CacheText, UpdateSourceTrigger=PropertyChanged}"
                    
                    >
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:EventTriggerBehavior.Actions>
                                <core:InvokeCommandAction Command="{Binding CacheButton}"/>
                            </core:EventTriggerBehavior.Actions>
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </NavigationViewItem>
                
                <NavigationViewItem Icon="Page2" Content="{Binding LargeFilesText, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:EventTriggerBehavior.Actions>
                                <core:InvokeCommandAction Command="{Binding LargeFilesButton}"/>
                            </core:EventTriggerBehavior.Actions>
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </NavigationViewItem>

                <NavigationViewItem Content="{Binding DuplicateText, UpdateSourceTrigger=PropertyChanged}">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE81E;"/>
                    </NavigationViewItem.Icon>
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:EventTriggerBehavior.Actions>
                                <core:InvokeCommandAction Command="{Binding DuplicateButton}"/>
                            </core:EventTriggerBehavior.Actions>
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </NavigationViewItem>

                <NavigationViewItem Icon="CalendarWeek" Content="{Binding AutoClearingText, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:EventTriggerBehavior.Actions>
                                <core:InvokeCommandAction Command="{Binding AutoClearingButton}"/>
                            </core:EventTriggerBehavior.Actions>
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </NavigationViewItem>

                <NavigationViewItem Icon="Setting" Content="Setting">
                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:EventTriggerBehavior.Actions>
                                <core:InvokeCommandAction Command="{Binding SettingButton}"/>
                            </core:EventTriggerBehavior.Actions>
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </NavigationViewItem>

            </NavigationView.MenuItems>
            <Frame>
                <Grid Background="{Binding ContextAcrylicBrush, Source={StaticResource ThemeManager}}">
                    <local:MultiViewControl x:ConnectionId='24' x:Name="mltView" >
                        <local:MultiViewControl.Views>

                            <StackPanel>
                                <Image Source="/Image/Just.jpg" />
                            </StackPanel>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <Grid Height="118px">



                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            
                                            Text="{Binding CacheText, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource ContextHeaderTextBlock}"
                                            HorizontalAlignment="Left"
                                        />

                                        <Button 
                                            Visibility="{Binding IsShowSelectOrDeselectButton, UpdateSourceTrigger=PropertyChanged}"
                                            Grid.Column="2"
                                                Style="{StaticResource HeaderButtonBase}"
                                                FontFamily="Segoe MDL2 Assets" 
                                                Command="{Binding SelectAllButton}"
                                                Content="&#xE8B3;"/>
                                        <Button 
                                            Visibility="{Binding IsShowSelectOrDeselectButton, UpdateSourceTrigger=PropertyChanged}"
                                            Grid.Column="3"
                                            Style="{StaticResource HeaderButtonBase}"
                                            Command="{Binding DeselectAllButton}"
                                            FontFamily="Segoe MDL2 Assets" 
                                            Content="&#xE8E6;"/>
                                        <Button 
                                            Grid.Column="4"
                                            Style="{StaticResource HeaderButtonBase}"
                                            Command="{Binding MoreButton}"
                                            FontFamily="Segoe MDL2 Assets" 
                                            Content="&#xE712;"
                                            />
                                    </Grid>

                                    <Grid>
                                        <StackPanel
                                        Orientation="Vertical">
                                            <CheckBox
                                            HorizontalAlignment="Stretch"
                                            Template="{StaticResource CheckBoxTemplate}" 
                                            Background="{Binding CheckBlockLightAcrylicBrush, Source={StaticResource ThemeManager}}"
                                            IsChecked="{Binding ClearModel.IsSystemCacheSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <Grid 
                                                HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30px"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForSegoeMDL2}"
                                                    Grid.Column="0"
                                                    FontFamily="Segoe MDL2 Assets" 
                                                    Text="&#xE770;"
                                                    />
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForText}"
                                                    Grid.Column="1" 
                                                    Text="{Binding SystemCacheText, UpdateSourceTrigger=PropertyChanged}"
                                                        Padding="25,3,0,0"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="3" 
                                                    Text="{Binding ClearModel.SystemCacheSize, UpdateSourceTrigger=PropertyChanged}"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="4" 
                                                    Text="B"/>
                                                </Grid>
                                            </CheckBox>

                                            <CheckBox 
                                            HorizontalAlignment="Stretch"
                                            Template="{StaticResource CheckBoxTemplate}" 
                                            Background="{Binding CheckBlockDarkAcrylicBrush, Source={StaticResource ThemeManager}}"
                                            IsChecked="{Binding ClearModel.IsApplicationCacheSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <Grid 
                                                HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30px"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForSegoeMDL2}"
                                                    Grid.Column="0"
                                                    FontFamily="Segoe MDL2 Assets" 
                                                    Text="&#xE74C;"
                                                    />
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForText}"
                                                    Grid.Column="1" 
                                                    Text="{Binding ApplicationCacheText, UpdateSourceTrigger=PropertyChanged}"
                                                        Padding="25,3,0,0"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="3" 
                                                    Text="{Binding ClearModel.ApplicationCacheSize, UpdateSourceTrigger=PropertyChanged}"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="4" 
                                                    Text="B"/>
                                                </Grid>
                                            </CheckBox>

                                            <CheckBox 
                                            HorizontalAlignment="Stretch"
                                            Template="{StaticResource CheckBoxTemplate}" 
                                            Background="{Binding CheckBlockLightAcrylicBrush, Source={StaticResource ThemeManager}}"
                                            IsChecked="{Binding ClearModel.IsMailCacheSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <Grid 
                                                HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30px"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForSegoeMDL2}"
                                                    Grid.Column="0"
                                                    FontFamily="Segoe MDL2 Assets" 
                                                    Text="&#xE715;"
                                                    />
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForText}"
                                                    Grid.Column="1" 
                                                    Text="{Binding MailCacheText, UpdateSourceTrigger=PropertyChanged}"
                                                        Padding="25,3,0,0"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="3" 
                                                    Text="{Binding ClearModel.MailCacheSize, UpdateSourceTrigger=PropertyChanged}"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="4" 
                                                    Text="B"/>
                                                </Grid>
                                            </CheckBox>

                                            <CheckBox 
                                            HorizontalAlignment="Stretch"
                                            Template="{StaticResource CheckBoxTemplate}" 
                                            Background="{Binding CheckBlockDarkAcrylicBrush, Source={StaticResource ThemeManager}}"
                                            IsChecked="{Binding ClearModel.IsOfficeCacheSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <Grid 
                                                HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30px"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForSegoeMDL2}"
                                                    Grid.Column="0"
                                                    FontFamily="Segoe MDL2 Assets" 
                                                    Text="&#xF56E;"
                                                    />
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForText}"
                                                    Grid.Column="1" 
                                                    Text="{Binding OfficeCacheText, UpdateSourceTrigger=PropertyChanged}"
                                                        Padding="25,3,0,0"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="3" 
                                                    Text="{Binding ClearModel.OfficeCacheSize, UpdateSourceTrigger=PropertyChanged}"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="4" 
                                                    Text="B"/>
                                                </Grid>
                                            </CheckBox>

                                            <CheckBox 
                                            HorizontalAlignment="Stretch"
                                            Template="{StaticResource CheckBoxTemplate}" 
                                            Background="{Binding CheckBlockLightAcrylicBrush, Source={StaticResource ThemeManager}}"
                                            IsChecked="{Binding ClearModel.IsBrowserCacheSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <Grid 
                                                HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30px"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForSegoeMDL2}"
                                                    Grid.Column="0"
                                                    FontFamily="Segoe MDL2 Assets" 
                                                    Text="&#xE774;"
                                                    />
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForText}"
                                                    Grid.Column="1" 
                                                    Text="{Binding BrowserCacheText, UpdateSourceTrigger=PropertyChanged}"
                                                        Padding="25,3,0,0"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="3" 
                                                    Text="{Binding ClearModel.BrowserCacheSize, UpdateSourceTrigger=PropertyChanged}"/>
                                                    <TextBlock 
                                                    Style="{StaticResource TextBlockInCheckBoxForCount}"
                                                    Grid.Column="4" 
                                                    Text="B"/>
                                                </Grid>
                                            </CheckBox>
                                        </StackPanel>
                                    </Grid>

                                </StackPanel>

                                <Grid 
                                    Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <ProgressRing 
                                        Grid.Column="1"
                                        VerticalAlignment="Center" 
                                        Width="138" 
                                        Height="138"  
                                        IsActive="{Binding ClearModel.IsActiveScannOrClean, UpdateSourceTrigger=PropertyChanged}"
                                        />
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"  
                                        Width="Auto"
                                        Visibility="{Binding ClearModel.IsActiveScannOrClean, UpdateSourceTrigger=PropertyChanged}"
                                        Text="000"/>

                                    <Button 
                                        Grid.Column="1"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource ButtonRoundedCorners}"
                                        Content="{Binding ScannOrCleanText, UpdateSourceTrigger=PropertyChanged}"
                                        Command="{Binding ScannAndCleanButton}"
                                        Visibility="{Binding IsShowScannOrClean, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </Grid>

                            <Grid>
                                <StackPanel 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                    <StackPanel 
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                        Width="Auto"
                                            Margin="5"
                                        Text="{Binding PurityText, UpdateSourceTrigger=PropertyChanged}"
                                            Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>
                                        <TextBlock
                                            Margin="5"
                                            Width="Auto"
                                            Text="{Binding ClearModel.DeleteCacheSize, UpdateSourceTrigger=PropertyChanged}"
                                            Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>
                                    </StackPanel>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Width="Auto"
                                        Text="{Binding SuccessfulCleanText, UpdateSourceTrigger=PropertyChanged}"
                                        Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>
                                    <TextBlock 
                                        HorizontalAlignment="Center"
                                        Width="Auto"
                                        Text="{Binding ComeToUsMoreOftenText, UpdateSourceTrigger=PropertyChanged}"
                                        Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="91px"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Text="{Binding SettingText, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource ContextHeaderTextBlock}"
                                    Margin="43,34,0,0"
                                    HorizontalAlignment="Left"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Margin="43,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0"
                                                       FontSize="15"
                                                       Margin="0,0,0,10"
                                                       Style="{StaticResource BaseTextBlock}"
                                                       Text="{Binding LenguageText, UpdateSourceTrigger=PropertyChanged}"/>
                                            <ComboBox
                                                Margin="0,10,0,10"
                                                Height="32px"
                                                Width="296px"
                                                Grid.Row="1"/>
                                        </Grid>
                                        <ToggleSwitch
                                            FontSize="15"
                                            Margin="0,10,0,0"
                                            Grid.Row="1"
                                            Header="{Binding AutoCleaningAtDeviceStartupText, UpdateSourceTrigger=PropertyChanged}" 
                                            OffContent="{Binding OffText, UpdateSourceTrigger=PropertyChanged}" 
                                            OnContent="{Binding OnText, UpdateSourceTrigger=PropertyChanged}" 
                                            IsOn="False" 
                                            Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>
                                        <ToggleSwitch
                                            FontSize="15"
                                            Margin="0,10,0,0"
                                            Grid.Row="2"
                                            Header="{Binding AutoStart, UpdateSourceTrigger=PropertyChanged}" 
                                            OffContent="{Binding OffText, UpdateSourceTrigger=PropertyChanged}" 
                                            OnContent="{Binding OnText, UpdateSourceTrigger=PropertyChanged}" 
                                            IsOn="True" 
                                            Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>

                                        <StackPanel Grid.Row="3" Margin="0,15,0,0">
                                            <TextBlock Text="{Binding DesignThemeText, UpdateSourceTrigger=PropertyChanged}" FontSize="15" Style="{StaticResource BaseTextBlock}" />

                                            <RadioButton 
                                                Command="{Binding ThemeLightRadioButton}" 
                                                Style="{StaticResource RadioButtonBase}"
                                                Content="{Binding LightText, UpdateSourceTrigger=PropertyChanged}" 
                                                FontSize="15"
                                                Padding="8,6,0,0"
                                                Margin="5"
                                                />
                                            <RadioButton 
                                                Command="{Binding ThemeDarkRadioButton}" 
                                                Style="{StaticResource RadioButtonBase}"
                                                Content="{Binding DarkText, UpdateSourceTrigger=PropertyChanged}"
                                                FontSize="15"
                                                Padding="8,6,0,0"
                                                Margin="5"
                                                />
                                            <RadioButton 
                                                Content="{Binding UserSystemSettingText, UpdateSourceTrigger=PropertyChanged}" 
                                                Style="{StaticResource RadioButtonBase}"
                                                FontSize="15"
                                                Padding="8,6,0,0"
                                                Margin="5"
                                                />
                                        </StackPanel>
                                        <TextBlock  Grid.Row="4" Text="{Binding AcentColorText, UpdateSourceTrigger=PropertyChanged}" Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}" FontSize="15"/>
                                        <StackPanel Grid.Row="5" Orientation="Horizontal">
                                            <RadioButton Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}" Content="First color"/>
                                            <RadioButton Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}" Content="Second color"/>
                                            <RadioButton Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}" Content="Thert color"/>
                                        </StackPanel>

                                    </Grid>

                                </Grid>
                            </Grid>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock 
                                    Grid.Row="0"
                                    Text="{Binding LargeFileText, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource ContextHeaderTextBlock}"/>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"
                                        Grid.Row="0"
                                        Width="Auto" 
                                        Height="Auto">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock 
                                            Grid.Row="0" 
                                            HorizontalAlignment="Center"
                                            Style="{StaticResource BaseTextBlock}"
                                            Text="{Binding HelloText, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock 
                                            Grid.Row="1" 
                                            HorizontalAlignment="Center"
                                            Style="{StaticResource BaseTextBlock}"
                                            Text="{Binding LetsPutThingsInOrderText, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <Button 
                                        Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource RoundButton}"
                                        Command="{Binding LargeFileOpenFolder}"
                                        Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>

                                    <TextBlock 
                                        Grid.Row="2" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource BaseTextBlock}"
                                        Text="{Binding AddFoldersText, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock 
                                    Grid.Row="0"
                                    Text="Large file" 
                                    Style="{StaticResource ContextHeaderTextBlock}"/>
                                <Grid Grid.Row="1" Grid.RowSpan="2">
                                    <ListBox 
                                        Background="{Binding ContextAcrylicBrush, Source={StaticResource ThemeManager}}"
                                        ItemsSource="{Binding ClearModel.LargeFileCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        HorizontalContentAlignment="Stretch">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox
                                                    HorizontalAlignment="Stretch"
                                                    Template="{StaticResource CheckBoxTemplate}" 
                                                    Background="{Binding CheckBlockLightAcrylicBrush, Source={StaticResource ThemeManager}}"
                                                    IsChecked="{Binding IsChecked, Mode=TwoWay}">

                                                    <Grid 
                                                        HorizontalAlignment="Stretch">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30px"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock 
                                                            Style="{StaticResource TextBlockInCheckBoxForSegoeMDL2}"
                                                            Grid.Column="0"
                                                            FontFamily="Segoe MDL2 Assets" 
                                                            Text="&#xE838;"
                                                            />
                                                        <TextBlock 
                                                            Style="{StaticResource TextBlockInCheckBoxForText}"
                                                            Grid.Column="1" 
                                                            Text="{Binding Item.Path}"
                                                            Padding="25,3,0,0"/>
                                                    </Grid>
                                                </CheckBox>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                </Grid>
                                <Button 
                                        Grid.Row="2"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource ButtonRoundedCorners}"
                                        Content="Clean"
                                        Command="{Binding CleanLargeButton}"/>
                            </Grid>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock 
                                    Grid.Row="0"
                                    Text="{Binding DuplicateFileText, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource ContextHeaderTextBlock}"/>
                                <Grid Grid.Row="1">
                                    <Button 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource RoundButton}"
                                        Command="{Binding DuplicateFileOpenFolderButton}"
                                        Foreground="{Binding ForegroundBrush, Source={StaticResource ThemeManager}}"/>
                                </Grid>
                            </Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock 
                                    Grid.Row="0"
                                    Text="Duplicate file" 
                                    Style="{StaticResource ContextHeaderTextBlock}"/>
                                <Grid Grid.Row="1" Grid.RowSpan="2">
                                    <ListBox 
                                        ItemsSource="{Binding ClearModel.DuplicateFileCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        HorizontalContentAlignment="Stretch">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox
                                                    HorizontalAlignment="Stretch"
                                                    Template="{StaticResource CheckBoxTemplate}" 
                                                    Background="{Binding CheckBlockLightAcrylicBrush, Source={StaticResource ThemeManager}}"
                                                    IsChecked="{Binding IsChecked, Mode=TwoWay}">
                                                    <Grid 
                                                        HorizontalAlignment="Stretch">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30px"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock 
                                                            Style="{StaticResource TextBlockInCheckBoxForSegoeMDL2}"
                                                            Grid.Column="0"
                                                            FontFamily="Segoe MDL2 Assets" 
                                                            Text="&#xE838;"
                                                            />
                                                        <TextBlock 
                                                            Style="{StaticResource TextBlockInCheckBoxForText}"
                                                            Grid.Column="1" 
                                                            Text="{Binding Item.Path}"
                                                            Padding="25,3,0,0"/>
                                                    </Grid>
                                                </CheckBox>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                </Grid>
                                <Button 
                                        Grid.Row="2"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource ButtonRoundedCorners}"
                                        Content="Clean"
                                        Command="{Binding CleanDuplicateFileButton}"/>
                            </Grid>


                        </local:MultiViewControl.Views>
                    </local:MultiViewControl>

                </Grid>



            </Frame>
        </NavigationView>

        
    </Grid>

</Page>

