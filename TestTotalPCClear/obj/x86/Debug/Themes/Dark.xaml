<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <AcrylicBrush x:Key="NavigationViewDefaultPaneBackground" 
                      BackgroundSource="Backdrop"
                      TintColor="#0078d633"
                      TintOpacity="0.6"/>
    <AcrylicBrush x:Key="NavigationViewExpandedPaneBackground" 
                      BackgroundSource="Backdrop"
                      TintColor="#0078d633"
                      TintOpacity="0.6"/>
    
    <AcrylicBrush x:Key="NavigationViewMenuBackground"
                        BackgroundSource="HostBackdrop"
                        TintOpacity="0.6"
                        TintColor="#0078d633"/>
    
    <AcrylicBrush x:Key="ContextAcrylicBrush"
                        BackgroundSource="HostBackdrop"
                        TintOpacity="0.85"
                        TintColor="#000000"/>

    <AcrylicBrush x:Key="CheckBlockLightAcrylicBrush"
                                  BackgroundSource="HostBackdrop"
                                  TintOpacity="0.15"
                                  TintColor="#ffffff"/>
    <AcrylicBrush x:Key="CheckBlockDarkAcrylicBrush"
                                  BackgroundSource="HostBackdrop"
                                  TintOpacity="0.05"
                                  TintColor="#3e3e3e"/>
    <AcrylicBrush x:Key="IsCheckBlockAcrylicBrush"
                                  BackgroundSource="HostBackdrop"
                                  TintOpacity="0.45"
                                  TintColor="#0078d6"/>
    <SolidColorBrush x:Key="ForegroundBrush" 
                     Color="White"/>

</ResourceDictionary>
